<UserControl
    d:DesignHeight="200"
    d:DesignWidth="400"
    mc:Ignorable="d"
    x:Class="ToDoAdvanced.Views.ToDoItem"
    x:DataType="vm:ToDoItemViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ToDoAdvanced.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:ToDoAdvanced.Converters">
    
    <UserControl.Resources>
        <conv:SplitWordsConverter x:Key="SplitWordsConverter"/>
        <conv:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>

    <Grid Classes="ItemContainer" ColumnDefinitions="Auto, Auto, Auto" RowDefinitions="Auto, Auto">
        <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Name}" VerticalAlignment="Center" Width="200" />
        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Status, Converter={StaticResource SplitWordsConverter }}" Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}" Margin="10,0" VerticalAlignment="Center"  />

        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Width="200">
            <Button Command="{Binding AddCommand}">
                <Image Width="16" Height="16" Source="avares://ToDoAdvanced/Assets/tick.png" />
            </Button>
            <Button Command="{Binding DeleteCommand}">
                <Image Width="16" Height="16" Source="avares://ToDoAdvanced/Assets/minus.png" />
            </Button>
            <Button>
                <Image Width="16" Height="16" Source="avares://ToDoAdvanced/Assets/pen.png" />
            </Button>
        </StackPanel>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding Description}" />
        </Grid>
</UserControl>